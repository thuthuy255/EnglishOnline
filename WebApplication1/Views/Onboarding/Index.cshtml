@using System.Web.Mvc
@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Duolingo Clone</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <!-- Bootstrap JS & Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        main {
            margin-top: 80px;
            flex: 1;
            flex-grow: 1; /* Giúp main mở rộng để chiếm không gian còn lại */
        }
      
        html, body {
            height: 100%;
            display: flex;
            flex-direction: column;
            font-family: 'Nunito', sans-serif;
        }

        .hero-section {
            display: flex; /* Sử dụng Flexbox */
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center; /* Căn giữa theo chiều dọc */
        }

            .hero-section img {
                width: 35vw; /* Chiếm 50% chiều rộng màn hình */
                max-width: 100%; /* Không vượt quá container */
                height: auto;
            }

        .btn-green {
            background-color: #58CC02;
            color: white;
            font-weight: bold;
            border-radius: 10px;
            padding: 12px 24px;
            width: 100%;
            border-bottom: 4px solid #58A700; /* Viền dưới 2px, màu xanh dương */
        }

            .btn-green:hover {
                color: white;
                background-color: #61E002;
                border-bottom: 4px solid #58A700; /* Viền dưới 2px, màu xanh dương */
            }

        .btn-white {
            background-color: white;
            color: #007bff;
            font-weight: bold;
            border-radius: 10px;
            padding: 12px 24px;
            width: 100%;
            border: 2px solid #CECECE;
            border-bottom: 4px solid #CECECE;
        }

            .btn-white:hover {
                background-color: #E5E5E5;
                border: 2px solid #CECECE;
                border-bottom: 4px solid #CECECE;
                color: #007bff;
            }

        .text-container {
            text-align: center;
        }

        .image-container img {
            max-width: 100%;
        }

        .header {
            position: fixed;
            top: 0;
            width: 100%;
            background: white;
            z-index: 1000;
            transition: box-shadow 0.3s ease-in-out;
            height: 80px;
            display: flex;
            align-items: center;
        }

            .header.scrolled {
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            }

        .dropdown-menu {
            min-width: 150px;
        }

        .horizontal {
            border-bottom: 2px solid #CECECE;
        }

        .bottom-language-bar {
            margin-top: auto; /* Đẩy nó xuống cuối */
            width: 100%;
            background: white;
            padding: 10px;
        }

        .new-section {
            width: 100%;
            background-color: #f0f0f0;
            text-align: center;
            padding: 20px;
        }

        .footer-section {
            background-color: #58CC02;
            color: white;
            display: flex;
        }

            .footer-section h2 {
                color: white;
            }

       

        .footer-section h2 {
            font-size: 17px; /* Chữ nhỏ hơn */
        }

        .list-unstyled {
            font-size: 15px;
        }

        .custom-heading {
            color: #58CC02; /* Màu xanh lá */
        }

        .footer-section ul li {
            color: #A5ED6E;
            font-weight: bold;
        }
    </style>

</head>

<body>
    <div class="boarding">
        <!-- Header -->
        <header class="header">
            <div class="header-content d-flex p-3 fixed-top">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-12 d-flex flex-column align-items-md-start align-items-center text-md-start text-center">
                            <img src="https://d35aaqx5ub95lt.cloudfront.net/images/splash/f92d5f2f7d56636846861c458c0d0b6c.svg" alt="Duolingo Logo" class="logo">
                        </div>
