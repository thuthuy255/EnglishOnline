
@{
    ViewBag.Title = "Nhiệm vụ hàng ngày";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="w-100" style="max-width: 500px;margin-right:auto;margin-left:auto;">
    <!-- Header -->
    <div class="bg-primary text-white p-4 rounded d-flex align-items-center">
        <div class="flex-grow-1">
            <h1 class="h4 fw-bold">Chào mừng!</h1>
            <p class="mb-0">Hãy hoàn thành nhiệm vụ để nhận thưởng nhé! Mỗi ngày sẽ có các nhiệm vụ mới.</p>
        </div>
        <img src="https://storage.googleapis.com/a1aa/image/4qUUY2ifGGZDbg0EWbH1caQCl0SB7k_hLCxM5IHgjMQ.jpg"
             alt="Green owl character holding a treasure chest"
             class="ms-3 rounded"
             width="80" height="80" />
    </div>

    <!-- Daily Tasks Section -->
    <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="h6 fw-bold mb-0">Nhiệm vụ hằng ngày</h2>
            <div class="text-warning d-flex align-items-center">
                <i class="fas fa-clock"></i>
                <span class="ms-1">13 TIẾNG</span>
            </div>
        </div>

        <!-- Task Card -->
        <div class="mt-3 bg-white p-3 rounded shadow-sm">
            <div class="d-flex align-items-center">
                <i class="fas fa-bolt text-warning fs-4"></i>
                <span class="ms-2 fw-bold">Kiếm 10 KN</span>
            </div>
            <div class="mt-2 d-flex align-items-center">
                <div class="progress flex-grow-1" style="height: 10px;">
                    <div class="progress-bar bg-secondary" style="width: 0%;"></div>
                </div>
                <img src="https://storage.googleapis.com/a1aa/image/chd9KCvY9A7iOrgpOJi5QG-BMun7J3Bdk6Xv_Sux3yE.jpg"
                     alt="Treasure chest icon"
                     class="ms-2"
                     width="20" height="20" />
                <span class="ms-2 text-muted">0 / 10</span>
            </div>
        </div>

        <!-- Locked Tasks -->
        <div class="mt-3 bg-light p-3 rounded d-flex align-items-center text-muted border">
            <i class="fas fa-lock fs-4"></i>
            <span class="ms-2 fw-bold">Nhiều nhiệm vụ sắp mở</span>
        </div>
    </div>
</div>