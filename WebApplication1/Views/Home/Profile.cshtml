
@{
    ViewBag.Title = "Trang Cá Nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string username = ViewBag.Username ?? "Thủy";
    string email = ViewBag.Email ?? "email@example.com";
}
<style>
    .text-primary {
        color: rgb(88, 204, 2) !important
    }
</style>
<div class="container mt-5 mb-5">
    <h2 class="text-center fw-bold mb-4 text-primary">TẠO HỒ SƠ CÁ NHÂN</h2>

    <!-- Header image with edit icon -->
    <div class="position-relative rounded overflow-hidden bg-light mb-4 text-center" style="max-height: 250px;">
        <img id="headerImage" src="https://storage.googleapis.com/a1aa/image/d2d7f0c5-9ddc-4415-3395-006abd767c05.jpg"
             class="img-fluid" alt="Ảnh nền" style="max-height: 250px; object-fit: cover;">
        <button class="btn btn-outline-secondary position-absolute top-0 end-0 m-3 shadow"
                onclick="document.getElementById('imageInput').click()">
            <i class="fas fa-pencil-alt"></i> Chỉnh sửa ảnh
        </button>
        <input type="file" id="imageInput" accept="image/*" style="display: none;">
    </div>

    <!-- Profile Form -->
    <div class="card shadow rounded-4 p-4 ">
        <form>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="inputName" class="form-label fw-semibold">Họ và tên</label>
                    <input type="text" class="form-control" id="inputName" placeholder="Nhập tên của bạn" value="@username">
                </div>
                <div class="col-md-6">
                    <label for="inputEmail" class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control" id="inputEmail" placeholder="Email của bạn" value="@email">
                </div>

            </div>

            <div class="row mb-3 ">
                <div class="col-md-6">
                    <label for="inputAddress" class="form-label fw-semibold">Địa chỉ</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="Nhập địa chỉ, thành phố, quốc gia...">
                </div>
                <div class="col-md-6">
                    <label for="inputDate" class="form-label fw-semibold">Ngày sinh</label>
                    <input type="date" class="form-control" id="inputDate">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary px-4">Lưu hồ sơ</button>
                </div>
            </div>




        </form>
    </div>
</div>

<script>
    document.getElementById('imageInput').addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('headerImage').src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
</script>