    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        const menuItems = document.querySelectorAll('.menu-item');

        // Hàm kiểm tra và áp dụng trạng thái menu-active dựa trên URL hiện tại
        function setActiveMenu() {
            const currentUrl = window.location.pathname; // Lấy đường dẫn hiện tại (ví dụ: "/Home/Learn")

            menuItems.forEach(item => {
                const itemUrl = item.getAttribute('data-url'); // Lấy data-url của menu-item

                // So sánh URL hiện tại với data-url (bỏ qua domain, chỉ so sánh path)
                if (itemUrl && currentUrl === new URL(itemUrl, window.location.origin).pathname) {
                    item.classList.add('menu-active');
                } else {
                    item.classList.remove('menu-active');
                }
            });
        }

        // Gọi hàm khi trang được tải
        window.addEventListener('DOMContentLoaded', setActiveMenu);

        // Xử lý sự kiện click
        menuItems.forEach(item => {
            item.addEventListener('click', function () {
                // Xóa class menu-active khỏi tất cả các menu-item
                menuItems.forEach(menu => menu.classList.remove('menu-active'));

                // Thêm class menu-active cho mục được click
                this.classList.add('menu-active');

                const url = this.getAttribute('data-url');
                if (url) {
                    setTimeout(() => {
                        window.location.href = url; // Chuyển hướng đến URL
                    }, 200);
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
