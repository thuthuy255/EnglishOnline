<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Progress Bar with Bootstrap 5</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        .header-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 80px;
            background-color: #ffffff;
            z-index: 1000;
            display: flex;
            align-items: center;
            padding: 10px;
        }

        .progress-container {
            width: 60%;
            height: 15px;
        }

        .progress-bar {
            transition: width 0.5s ease-in-out;
        }

        .btn-back {
            padding: 6px;
            border-radius: 50%;
            font-size: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border: none;
            background: none;
            cursor: pointer;
        }

            .btn-back i {
                color: #555;
                font-size: 22px;
            }


       
    </style>
</head>
<body>
    <div class="header-container container-fluid">
        <div class="d-flex align-items-center justify-content-center w-100 gap-3">
            <!-- Nút Back có icon -->
            <button class="btn-back" onclick="goBack()">
                <i class="fas fa-arrow-left"></i>
            </button>

            <!-- Thanh tiến trình -->
            <div class="progress progress-container">
                <div id="progress-bar"
                     class="progress-bar"
                     role="progressbar"
                     style="width: 0%"
                     aria-valuenow="0"
                     aria-valuemin="0"
                     aria-valuemax="100">
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentProgress = 0; // Bắt đầu từ 0%
        const step = 10; // Mỗi bước tăng/giảm 10%

        function updateProgress(value) {
            let progressBar = document.getElementById("progress-bar");
            if (progressBar) {
                value = Math.max(0, Math.min(100, value)); // Giới hạn từ 0 đến 100
                currentProgress = value;
                progressBar.style.width = value + "%";
                progressBar.setAttribute("aria-valuenow", value);
            }
        }

        function goBack() {
            if (currentProgress > 0) {
                updateProgress(currentProgress - step); // Giảm tiến trình
            } else {
                window.history.back(); // Nếu tiến trình về 0, quay lại trang trước
            }
        }

    
    </script>
</body>
</html>
