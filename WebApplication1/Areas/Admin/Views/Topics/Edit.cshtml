@model Model.EF.Topic

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="col-md-8 bg-white p-5 rounded shadow vh-10">
            <h2 class="text-center">Sửa Chủ Đề</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TopicID)

            <div class="form-group">
                Tên chủ đề
                <div class="mb-3">
                    @Html.EditorFor(model => model.TopicName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TopicName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="PrerequisiteTopicId">Chủ đề yêu cầu trước</label>
                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(ViewBag.PrerequisiteTopicName))
                    {
                        <span class="form-control">@ViewBag.PrerequisiteTopicName</span>
                    }
                    else
                    {
                        <span class="form-control">Không có</span>
                    }

                    <!-- Lưu lại PrerequisiteTopicId trong form mà không cho phép sửa -->
                    @Html.HiddenFor(model => model.PrerequisiteTopicId)
                </div>
            </div>



            <div class="d-flex justify-content-center w-100">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </div>
            }

        </div>
    </div>
</body>
</html>
