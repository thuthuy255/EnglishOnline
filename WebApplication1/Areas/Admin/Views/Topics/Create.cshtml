@model Model.EF.Topic

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="col-md-8 bg-white p-5 rounded shadow vh-10">
            <h2 class="text-center">Thêm Chủ Đề</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- TopicName -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.TopicName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="mb-3">
                            @Html.EditorFor(model => model.TopicName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TopicName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- PrerequisiteTopicId Dropdown -->
                    <div class="form-group">
                        @Html.Label("Chủ đề yêu cầu trước", new { @class = "control-label col-md-2" })
                        <div class="mb-3">
                            @Html.DropDownListFor(model => model.PrerequisiteTopicId,
                                (SelectList)ViewBag.PrerequisiteTopicId,
                                new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Create" class="btn btn-primary btn-lg mt-3" />
                    </div>
                </div>
            }


        </div>
    </div>

</body>
</html>
